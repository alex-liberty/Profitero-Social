<style>
  .backgroud-blue{
    display:none;
    background-image: linear-gradient(to bottom left, #72c7f0, #005c9b);
    width: 100%;
    height: 150px;
    margin-top: 100px;
    z-index: -1000;
  }

    .main{
      margin-top:100px;
    }
</style>

<p id="notice"><%= notice %></p>
<h1>Users</h1>
<div class="main-users">
  <table>
    <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.about %></td>
        <td><%= user.hobbies %></td>
        <td><%= user.gender %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>
</div>




