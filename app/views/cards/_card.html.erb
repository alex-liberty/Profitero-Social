<div class = "card_div full-width">
  <div><%= link_to card.title, card %></div>
  <div><%= card.name %></div>
  <div><%= card.event_date %></div>
  <div><%= card.max_users_count %></div>
  <div>Subscribers: <%= card.users.map(&:name).join(", ") %></div>
  <% if card.users.find {|user| user.id == current_user[:id]} %>
    <%= link_to "Unsubscribe", unsubscribe_card_path(id: card.id, user_id: current_user[:id]), method: :post %>
  <% else %>
    <%= link_to "Subscribe", subscribe_card_path(id: card.id, user_id: current_user[:id]), method: :post %>
  <% end %>
</div>