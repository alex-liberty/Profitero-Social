<%= form_with(model: card, local: true) do |f| %>

  <%= f.label :Type %>:
  <%= f.select :category_id, categories_list.map{|cat| [cat.name,cat.id] } %><br />

  <%= f.label :Title %>:
  <%= f.text_field :title %><br />

  <%= f.label :Description %>:
  <%= f.text_field :name %><br />

  <%= f.label :Date %>:
  <%= f.date_field :event_date %><br />

  <%= f.label :'People count' %>:
  <%= f.text_field :max_users_count %><br />

  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
