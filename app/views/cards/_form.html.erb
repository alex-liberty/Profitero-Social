<div class="container">
  <div class="row">

    <div class="col-md-8 col-md-offset-2">

      <h1>Create card</h1>

      <%= form_with(model: card, local: true) do |f| %>

        <div class="form-group">
          <label for="type">Type</label>
          <%= f.select :category_id, categories_list.map{|cat| [cat.name,cat.id] }, {}, { :class => "form-control" } %>
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          <%= f.text_field :title, class: "form-control"%>
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <%= f.text_area :name, class: "form-control", :rows=>"5" %>
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          <%= f.date_field :event_date, class: "form-control" %>
        </div>

        <div class="form-group">
          <label for="people_count">People count</label>
          <%= f.text_field :max_users_count, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Create', :class => 'btn btn-primary' %>
        </div>

      <% end %>
    </div>

    <% if card.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

          <ul>
    <% card.errors.full_messages.each do |message| %>
            <li><%= message %></li>
    <% end %>
          </ul>
        </div>
    <% end %>

  </div>
</div>
